<div class="row">
  <div class="large-6 columns">
    <table id="info_user_table" class="dataTable" cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th colspan="3">{{tr "General information"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="key_td">{{tr "ID"}}</td>
          <td class="value_td">{{element.ID}}</td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Login"}}</td>
          <td class="value_td">{{element.NAME}}</td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Full name"}}</td>
          <td class="value_td">
            <input class="registration_form" id="full_name" type="text" placeholder="{{tr "Full name"}}"></input>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "E-mail"}}</td>
          <td class="value_td">
            <input class="registration_form" id="email" type="text" placeholder="{{tr "E-mail"}}"></input>
			<div class="small-centered" style="line-height: 1; font-size: 13px;">
			  <span id="email_validation_message"></span>
			</div>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Manager's full name"}}</td>
          <td class="value_td">
            <input class="registration_form" id="manager_full_name" type="text" placeholder="{{tr "Manager's full name"}}"></input>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Manager's e-mail"}}</td>
          <td class="value_td">
            <input class="registration_form" id="manager_email" type="text" placeholder="{{tr "Manager's e-mail"}}"></input>
			<div class="small-centered" style="line-height: 1; font-size: 13px;">
			  <span id="manager_email_validation_message"></span>
			</div>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Laboratory"}}</td>
          <td class="value_td">
            <select name="laboratory" id="lab">
				<option value="{{tr "VBLHEP"}}">{{tr "VBLHEP"}}</option>
				<option value="{{tr "LIT"}}">{{tr "LIT"}}</option>
				<option value="{{tr "DLNP"}}">{{tr "DLNP"}}</option>
				<option value="{{tr "BLTP"}}">{{tr "BLTP"}}</option>
				<option value="{{tr "FLNP"}}">{{tr "FLNP"}}</option>
				<option value="{{tr "FLNR"}}">{{tr "FLNR"}}</option>
				<option value="{{tr "SOD"}}">{{tr "SOD"}}</option>
				<option value="{{tr "LRB"}}">{{tr "LRB"}}</option>
				<option value="{{tr "MAC 'Nanobiophotonics'"}}">{{tr "MAC 'Nanobiophotonics'"}}</option>
            </select>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Topic number"}}</td>
          <td class="value_td">
            <select name="topic_number" id="topic" >
				<option value="{{tr "No topic"}}">{{tr "No topic"}}</option>
            </select>
			<span>
				{{tr "Details on the listed topics see"}} <a href="http://wwwinfo.jinr.ru/plan/ptp-2016/title_a6.htm" target="_blank"> {{tr "here"}} </a>
			</span>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">
          </td>
        </tr>
        <tr>
          <td class="key_td"></td>
          <td class="value_td"></td>
          <td>
              {{! <a class="action_button top_button button" href="#next_click" id="resource_tab_a">NextA</a> }}
			  <button class="action_button top_button button" href="Request.next_click" id="resource_tab_b">{{tr "Next"}}</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
