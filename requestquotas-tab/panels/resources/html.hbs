<div class="row">
  <div class="large-6 columns">
    <table id="info_user_table" class="dataTable" cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th colspan="3">{{tr "Required resources"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="key_td">{{tr "CPUs"}}</td>
          <td class="value_td">
            <input class="registration_form" id="cpu" type="text" placeholder="{{tr "cores"}}"></input>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "RAM"}}</td>
          <td class="value_td">
            <input class="registration_form" id="ram" type="text" placeholder="{{tr "GB"}}"></input>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Storage"}}</td>
          <td class="value_td">
            <input class="registration_form" id="hdd" type="text" placeholder="{{tr "GB"}}"></input>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "Number of VMs"}}</td>
          <td class="value_td">
            <input class="registration_form" id="vms" type="text" placeholder="{{tr "Number"}}"></input>
		  </td>
          <td></td>
        </tr>
        <tr>
          <td class="key_td">{{tr "OS type"}}</td>
          <td class="value_td">
            <select name="os_type" id="os">
				<option value="{{tr "Linux"}}">{{tr "Linux"}}</option>
				<option value="{{tr "Other"}}">{{tr "Other"}}</option>
            </select>
		  </td>
          <td></td>
        </tr>
      </tbody>
    </table>
	<table class="dataTable" cellpadding="0" cellspacing="0" border="0">
      <tbody>
	  <tr>
          <td>
			<div class="row">
			  <div class="small-centered  large-7 columns">
				<textarea class="registration_form"  id="comment" rows="5" style="width:100%;" placeholder="{{tr "Comment (purpose of the requested resources or reason for quotas change)"}}"></textarea>
			  </div>
			</div>
		  </td>
          <td>
			<button class="action_button top_button button" href="Request.send" id="send_request" disabled="disabled">{{tr "Send"}}</button>
		  </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="large-9 columns">
    {{{templateTableHTML}}}
  </div>
</div>
